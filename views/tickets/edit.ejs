<!DOCTYPE html>
<html>
  <head>
    <title>Editar Ticket</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Editar Ticket</h1>
    <a href="/tickets">Volver</a>
    <form action="/tickets/<%= ticket.id %>/update" method="post">
      <label>ID Venta:
        <select name="id_venta">
          <option value="">--Seleccione--</option>
          <% ventas.forEach(function(v){ %>
            <option value="<%= v.id %>" <%= (ticket.id_venta == v.id) ? 'selected' : '' %>><%= v.id %> - <%= v.fecha || '' %></option>
          <% }) %>
        </select>
      </label><br>

      <label>ID Funci√≥n:
        <select name="id_funcion">
          <option value="">--Seleccione--</option>
          <% funciones.forEach(function(f){ %>
            <option value="<%= f.id %>" <%= (ticket.id_funcion == f.id) ? 'selected' : '' %>><%= f.id %> - <%= f.movie ? f.movie.title : 'Funcion' %> - <%= f.datetime %></option>
          <% }) %>
        </select>
      </label><br>

      <label>Asiento: <input type="text" name="asiento" value="<%= ticket.asiento %>"></label><br>
      <label>Precio: <input type="number" step="0.01" name="precio" value="<%= ticket.precio %>"></label><br>
      <button type="submit">Guardar</button>
    </form>
  </body>
</html>
