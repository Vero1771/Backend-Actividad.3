<%- include('../partials/header') %>
<main style="padding:20px;">
  <h2>Usuarios</h2>
  <p><a href="/users/new">Crear nuevo usuario</a></p>
  <table border="1" cellpadding="6" cellspacing="0">
    <thead>
      <tr><th>ID</th><th>Email</th><th>Rol</th><th>Acciones</th></tr>
    </thead>
    <tbody>
      <% users.forEach(function(u){ %>
        <tr>
          <td><%= u.id_usuario %></td>
          <td><%= u.email %></td>
          <td><%= u.role %></td>
          <td>
            <a href="/users/<%= u.id_usuario %>/edit">Editar</a>
            <form action="/users/<%= u.id_usuario %>/delete" method="post" style="display:inline-block;margin-left:10px;" onsubmit="return confirm('Â¿Borrar usuario?');">
              <button type="submit">Borrar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
