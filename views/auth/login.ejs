<!DOCTYPE html>
<html>
  <head>
    <title>Iniciar sesión</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Iniciar sesión</h1>
    <form id="loginForm">
      <label>Email: <input type="email" name="email" required></label><br>
      <label>Password: <input type="password" name="password" required></label><br>
      <button type="submit">Ingresar</button>
    </form>
    <script>
      document.getElementById('loginForm').addEventListener('submit', async e => {
        e.preventDefault();
        const form = e.target;
        const data = { email: form.email.value, password: form.password.value };
        const res = await fetch('/auth/api/login', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data) });
        const j = await res.json();
        if (res.ok) {
          localStorage.setItem('token', j.token);
          // set cookie so server-side views can read token
          document.cookie = 'token=' + j.token + '; path=/';
          // redirect admin users to admin dashboard, others to user dashboard
          if (j.user && j.user.role === 'admin') {
            window.location = '/admin';
          } else {
            window.location = '/user';
          }
        } else {
          alert(j.error || j.warning || 'Error');
        }
      });
    </script>
  </body>
</html>