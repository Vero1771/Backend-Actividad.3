<!DOCTYPE html>
<html>
  <head>
    <title>Venta <%= venta.id %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Venta <%= venta.id %></h1>
    <a href="/ventas">Volver</a>
    <ul>
      <li>Método: <%= venta.metodo ? venta.metodo.nombre : venta.id_metodo %></li>
      <li>Fecha: <%= venta.fecha %></li>
      <li>Total: <%= venta.total %></li>
    </ul>
    <a href="/ventas/<%= venta.id %>/edit">Editar</a>
    <p><a href="/ventas/api/<%= venta.id %>/tickets">Ver tickets (JSON)</a></p>
    <p><a href="/tickets/new?id_venta=<%= venta.id %>">Agregar ticket a esta venta</a></p>

    <% if (tickets && tickets.length) { %>
      <h3>Tickets de la venta</h3>
      <table>
        <thead><tr><th>ID</th><th>Función</th><th>Asiento</th><th>Precio</th><th>Acciones</th></tr></thead>
        <tbody>
          <% tickets.forEach(function(t){ %>
            <tr>
              <td><a href="/tickets/<%= t.id %>"><%= t.id %></a></td>
              <td><%= t.id_funcion %></td>
              <td><%= t.asiento %></td>
              <td><%= t.precio %></td>
              <td>
                <a href="/tickets/<%= t.id %>/edit">Editar</a>
                <form action="/tickets/<%= t.id %>/delete" method="post" style="display:inline">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No hay tickets para esta venta.</p>
    <% } %>
  </body>
</html>
